<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/control_margin">

    <ImageButton
        android:layout_width="@dimen/control_size"
        android:layout_height="@dimen/control_size"
        tools:src="@drawable/ic_add_black_24dp"
        android:id="@+id/btn_add_text_item"
        android:contentDescription="@string/descriptionButtonAdd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tv_text_item"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/et_text_item"/>

</LinearLayout>