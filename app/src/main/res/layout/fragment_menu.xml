<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainmenu.MenuFragment">

    <Button
        android:id="@+id/main_button_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/main_textview_questions"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/button_questions_text"/>

    <TextView
        android:id="@+id/main_textview_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_nulis"
        android:textAlignment="center"
        android:textSize="@dimen/textview_text_size"
        app:layout_constraintBottom_toTopOf="@id/main_textview_questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/main_button_questions"
        app:layout_constraintTop_toTopOf="@id/main_button_questions" />
</androidx.constraintlayout.widget.ConstraintLayout>